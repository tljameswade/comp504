package model.paint.strategy;

import java.awt.Graphics;
import java.awt.geom.AffineTransform;

import model.Ball;
import model.paint.MultiPaintStrategy;

public class EllipseSquarePaintStrategy extends MultiPaintStrategy{
	
	public EllipseSquarePaintStrategy() {
		this(new AffineTransform());
	}
	
	public EllipseSquarePaintStrategy(AffineTransform at) {
		super(new EllipsePaintStrategy(), new RectanglePaintStrategy());
	}
	
	@Override	
	public void paintCfg(Graphics g, Ball host) {
		super.paintCfg(g, host);
		if(Math.abs(Math.atan2(host.getVelocity().y, host.getVelocity().x))> Math.PI/2.0) {
		  at.scale(1.0, -1.0);
		}
	}
}
