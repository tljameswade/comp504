package provided.util;

/**
 * Represents an instrument as a name and an integer value
 * @author swong
 *
 */
public class ABCInstrument {
	/**
	 * The name of the instrument
	 */
	private String name;
	/**
	 * The integer value associated with the instrument.
	 */
	private int value;

	/**
	 * Constructor for the class
	 * @param name the name of the instrument
	 * @param value the instrument's associated integer value
	 */
	public ABCInstrument(String name, int value) {
		this.name = name;
		this.value = value;
	}

	/**
	 * Accessor for the name of the instrument
	 * @return the name of the instrument
	 */
	public String getName() {
		return name;
	}

	/**
	 * Accessor for the integer value associated with this instrument.
	 * @return the integer value for this instrument
	 */
	public int getValue() {
		return value;
	}

	/**
	 * Returns the string representation of this class
	 * @return "name: value"
	 */
	public String toString() {
		return name + ": " + value;
	}
}
